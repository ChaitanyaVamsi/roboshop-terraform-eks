pipeline {

    /*
     * Run on any available Jenkins agent
     * (Alternatively, you can restrict to a specific node â€“ see commented section below)
     */
    agent any

    /*
    // Example: Run on a specific Jenkins node
    agent {
        node {
            label 'slave'
        }
    }
    */

    /*
     * Global environment variables
     * These can be used across all stages
     */
    environment {
        PROJECT   = 'roboshop'
        COMPONENT = 'catalogue'
    }

    /*
     * Pipeline-level options
     */
    options {
        // Abort the build if it runs longer than 10 minutes
        timeout(time: 10, unit: 'MINUTES')

        // Prevent multiple concurrent executions of this pipeline
        disableConcurrentBuilds()

        // Enable colored output in console logs
        ansiColor('xterm')
    }

    stages {

        /*
         * Initialize Terraform
         */
        stage('Init') {
            steps {
                withAWS(region: 'us-east-1', credentials: 'aws-creds') {
                    sh '''
                        cd 10-sg
                        terraform init
                    '''
                }
            }
        }

        /*
         * Terraform plan stage
         * Shows what changes will be applied
         */
        stage('Plan') {
            steps {
                withAWS(region: 'us-east-1', credentials: 'aws-creds') {
                    sh '''
                        cd 10-sg
                        terraform plan
                    '''
                }
            }
        }

        /*
         * Deployment stage
         * Requires manual approval before continuing
         */
        stage('Deploy') {

            steps {
                withAWS(region: 'us-east-1', credentials: 'aws-creds') {
                    sh '''
                        cd 10-sg
                        terraform apply -auto-approve
                    '''
                }
            }
        }

        stage('Parallel Trigger'){
            parallel{
                  stage('bastion'){
                      steps{
                            script{
                                build job: '20-bastion',
                                wait: false,
                                propagate: false
                            }
                      }
                  }

                  stage('sg-rules'){
                      steps{
                            script{
                                build job: '30-sg-rules',
                                wait: false,
                                propagate: false
                            }
                      }
                  }

                  stage('ecr'){
                      steps{
                            script{
                                build job: '40-ecr',
                                wait: false,
                                propagate: false
                            }
                      }
                  }

                  stage('acm'){
                      steps{
                            script{
                                build job: '70-acm',
                                wait: false,
                                propagate: false
                            }
                      }
                  }

                  stage('eks'){
                      steps{
                            script{
                                build job: '90-eks',
                                wait: false,
                                propagate: false
                            }
                      }
                  }
            }
        }

        stage('ALB'){
            steps{
              script{
                  build job: '80-frontend-alb',
                  wait: false,
                  propagate: false
              }
            }
        }

    }
}
